<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <% if logged_in? %>
      <h1>
	<%= gravatar_for @user %>
	<%= @user.name %>
      </h1>
      <% else %>
	<h1>
	  Not logged in
	</h1>
      <% end %>
    </section>
  </aside>
</div>
